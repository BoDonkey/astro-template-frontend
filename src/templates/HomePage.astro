---
import Hero from '../widgets/HeroWidget.astro';
import Slideshow from '../widgets/SlideshowWidget.astro';
import AposArea from '@apostrophecms/apostrophe-astro/components/AposArea.astro';
import { useSiteConfig } from '../lib/useSiteConfig';

const { page, user, query, global } = Astro.props.aposData;
const { main } = page;
const { theme } = useSiteConfig(global);

const heroData = page?.heroSection || {};
---

<div class="main-content astro-hp-content">
  {/* Conditional rendering based on layout */}
  {theme.layout === 'classic' && (
    <Hero widget={heroData} />
  )}
<!-- 
  {theme.layout === 'modern' && (
    <Slideshow widget={slideshowData} />
  )} -->

  {/* Main content area shown for all layouts */}
  <AposArea area={main} />
</div>